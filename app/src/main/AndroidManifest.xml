<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.financeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.start.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.sync.SyncActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.authorisation.AuthorisationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.navigation.NavigationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.main.AddNewBillActivity"
            android:fitsSystemWindows="true"
            android:label="@string/title_activity_add_new_bill"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.main.AddRecordActivity"
            android:label="@string/title_activity_add_record"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".ui.main.ListBillActivity"
            android:label="@string/title_activity_list_bill"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.SettingsBillActivity"
            android:label="@string/title_activity_settings_bill"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.EditBillActivity"
            android:label="@string/title_activity_edit_bill"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.registration.RegAuthActivity"
            android:label="@string/title_activity_reg_auth"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.EditBalanceTextActivity"
            android:label="@string/title_activity_edit_balance_text"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.EditLastRecordsTextActivity"
            android:label="@string/title_activity_edit_last_records_text"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>